<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AccountManager</servlet-name>
        <servlet-class>Session.AccountManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ajouterdocument</servlet-name>
        <servlet-class>Session.Ajouterdocument</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Content</servlet-name>
        <servlet-class>Session.Content</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controle_saisie</servlet-name>
        <servlet-class>Session.Controle_saisie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SelectFile</servlet-name>
        <servlet-class>Session.SelectFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Manager</servlet-name>
        <servlet-class>Session.Manager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountManager</servlet-name>
        <url-pattern>/AccountManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ajouterdocument</servlet-name>
        <url-pattern>/Ajouterdocument</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Content</servlet-name>
        <url-pattern>/Content</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controle_saisie</servlet-name>
        <url-pattern>/Controle_saisie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SelectFile</servlet-name>
        <url-pattern>/SelectFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Manager</servlet-name>
        <url-pattern>/Manager</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            -1
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
